{
  "name": "luis-travel-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/web",
    "packages/*"
  ],
  "resolutions": {
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0"
  },
  "scripts": {
    "dev": "bun run --filter @luis-travel/web dev",
    "dev:web": "bun run --filter @luis-travel/web dev",
    "dev:mobile": "cd apps/mobile && bun run start",
    "build": "bun run --filter @luis-travel/web build",
    "test": "bun run --filter '*' test",
    "typecheck": "bun run --filter '*' typecheck",
    "lint": "biome check",
    "lint:fix": "biome check --fix --diagnostic-level=error --unsafe",
    "format": "biome format --write",
    "db:generate": "bun run --filter @luis-travel/db db:generate",
    "db:migrate": "bun run --filter @luis-travel/db db:migrate",
    "db:studio": "bun run --filter @luis-travel/db db:studio"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "semver": "^7.6.0",
    "typescript": "^5.7.2"
  }
}
